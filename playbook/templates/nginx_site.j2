server {
    listen 80;
    listen [::]:80;
    server_name {{ nginx_site.server_name }};
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ nginx_site.server_name }};

    ssl_certificate /etc/letsencrypt/live/{{ nginx_site.server_name }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ nginx_site.server_name }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    {% with apps = nginx_site.apps %}
        {% include 'nginx_site/apps.j2' %}
    {% endwith %}
}
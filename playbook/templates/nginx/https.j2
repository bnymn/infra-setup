{% for domain in application.other_domains %}
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ domain }};
    return 301 https://{{ application.main_domain }}$request_uri;

    ssl_certificate /etc/letsencrypt/live/{{ application.main_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ application.main_domain }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}
{% endfor %}
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ application.main_domain }};
    index index.php;
    charset utf-8;
    error_page 404 /index.php;

    # Set the Document Root: Even though you're not serving static files with Nginx,
    # setting the root directive to the public directory of your Laravel application
    # is a good practice. This setting is used by Nginx to resolve paths correctly
    # for internal processing, including constructing the SCRIPT_FILENAME parameter correctly.
    root /var/www/html/public;

    location / {
        fastcgi_pass app;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        include fastcgi_params;
    }
    ssl_certificate /etc/letsencrypt/live/{{ application.main_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ application.main_domain }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}

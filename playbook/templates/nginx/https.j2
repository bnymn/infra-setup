upstream app {
{% for application_server in application_servers %}
    server {{ application_server }}:9000;
{% endfor %}
}

{% for domain in application.other_domains %}
    server {
        listen 80;
        listen [::]:80;
        server_name {{ domain }};
        location /.well-known/acme-challenge {
            root /var/www/html/{{ domain }};
        }
        location / {
            return 301 https://{{ application.main_domain }}$request_uri;
        }
    }
{% endfor %}
server {
    listen 80;
    listen [::]:80;
    server_name {{ application.main_domain }};
    location /.well-known/acme-challenge {
        root /var/www/html/{{ application.main_domain }};
    }
    location / {
        return 301 https://{{ application.main_domain }}$request_uri;
    }
}


{% for application in applications %}
    {% for domain in application.other_domains %}
    server {
        listen 80;
        listen [::]:80;
        server_name {{ domain }};
        location /.well-known/acme-challenge {
            root /var/www/html/{{ domain }};
        }
        location / {
            return 301 https://{{ application.main_domain }}$request_uri;
        }
    }
    {% endfor %}
{% endfor %}
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ application.server_names | join(' ') }};

    root /home/app/{{ nginx_site.server_names[0] }};

    location / {
        try_files $uri $uri/ @proxy;
    }

    location @proxy {
        proxy_pass http://app;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    ssl_certificate /etc/letsencrypt/live/{{ nginx_site.server_names[0] }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ nginx_site.server_names[0] }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}

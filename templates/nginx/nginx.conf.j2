server {
    listen 80;
    server_name {{ parent_item.host }};

    location ^~ /.well-known/acme-challenge {
        alias /home/pazldev/{{ parent_item.root_dir }}/.well-known/acme-challenge;
    }

    location / {
        proxy_pass http://127.0.0.1:{{ parent_item.port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
